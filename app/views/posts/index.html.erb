<div class="min-h-screen bg-[#f8f2ec] p-8">
  <div class="max-w-5xl mx-auto">
    <!-- タイトル -->
    <h2 class="text-2xl font-bold text-black mb-6 text-center">投稿一覧</h2>

    <% if @posts.any? %>
    <div class="space-y-6">
      <% @posts.each do |post| %>
      <div class="bg-white p-4 rounded shadow">
        <p class="text-sm text-gray-700 mb-2"><%= post.content.gsub("\n", "<br>").html_safe %></p>
        <p class="text-xs text-gray-500">投稿日時: <%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
      </div>
      <% end %>
    </div>
    <% else %>
    <p class="text-center text-gray-700">まだ投稿がありません。達成ボタンを押して投稿しましょう！</p>
    <% end %>

    <!-- マイ習慣へのリンク -->
    <div class="mt-6 text-center">
      <%= link_to 'マイ習慣', my_habits_path, class: "btn bg-[#FFA500] text-black text-lg hover:bg-[#C28742] px-4 py-2 rounded" %>
    </div>

  </div>
</div>