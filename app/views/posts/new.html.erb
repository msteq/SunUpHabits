<div class="min-h-screen bg-[#f8f2ec] flex flex-col items-center justify-center">
  <h2 class="text-6xl font-bold text-red-500 mb-10">
    <%= "#{@habit.achieved_days_last_30_days}日達成！素晴らしい！" %>
  </h2>

  <!-- カード部分 -->
  <div class="w-full max-w-lg p-8 bg-white rounded shadow-lg relative">
    <h3 class="text-lg font-bold text-black mb-2 text-center">
      本日の進捗を記録
    </h3>
    <div class="border-t-2 border-[#ffa500] w-full"></div>

    <!-- 投稿内容編集エリア -->
    <div class="w-full max-w-lg mx-auto mt-6">
      <label class="block text-sm text-gray-700 mb-2">以下の内容は自由に編集できます</label>
      <%= form_with(model: @post, local: true, data: { turbo: false }) do |form| %>
      <%= form.hidden_field :habit_id, value: @habit.id %>
      <%= form.text_area :content, class: "w-full p-4 rounded shadow-sm bg-[#fff9e8] border border-gray-300 text-base text-black h-28", maxlength: 1000, rows: 6 %>
      <% if @post.errors.any? %>
      <%= render "shared/error_messages", resource: @post %>
      <% end %>

      <div class="flex justify-center mt-6">
        <%= form.submit "投稿", class: "btn bg-[#4fd1c5] hover:bg-[#38b2ac] text-black text-lg w-32 h-10 rounded font-bold shadow" %>
      </div>
      <% end %>
    </div>
  </div>
</div>