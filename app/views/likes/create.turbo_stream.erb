<%= turbo_stream.replace "liked_posts" do %>
  <%= render partial: "users/liked_posts", locals: { liked_posts: current_user.liked_posts.order(created_at: :desc) } %>
<% end %>

<%= turbo_stream.replace "like_button_#{@post.id}" do %>
  <%= render partial: "posts/like_button", locals: { post: @post } %>
<% end %>