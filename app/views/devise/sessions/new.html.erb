<div class="min-h-screen bg-[#f8f2ec] flex items-center justify-center">
  <div class="w-full max-w-md p-8 bg-white rounded shadow-lg">
    <h2 class="text-2xl font-bold text-black mb-6 text-center">ログイン</h2>

    <!-- エラーメッセージの表示 -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, data: { turbo: false }) do |form| %>

    <div class="mb-4">
      <%= form.label :email, "メールアドレス", class: "block text-gray-700" %>
      <%= form.email_field :email, class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="mb-6">
      <%= form.label :password, "パスワード", class: "block text-gray-700" %>
      <%= form.password_field :password, class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "ログイン", class: "btn bg-[#FFA500] text-black text-lg hover:bg-[#C28742] w-full h-10 rounded shadow" %>
    </div>
    <% end %>

    <div class="mt-4 text-center">
      OR
    </div>

    <div class="mt-4 flex justify-center">
      <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false } do %>
      <%= image_tag "google_sign_in.png", class: "h-12 w-auto shadow" %>
      <% end %>
    </div>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>