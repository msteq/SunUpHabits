<div class="min-h-screen bg-[#f8f2ec] flex items-center justify-center">
  <div class="w-full max-w-md p-8 bg-white rounded shadow-lg">
    <!-- タイトル -->
    <h2 class="text-2xl font-bold text-black mb-6 text-center">パスワードを変更</h2>

    <!-- エラーメッセージの表示 -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- フォーム開始 -->
    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), method: :put, local: true, data: { turbo: false }) do |form| %>
    <!-- トークンはパスワード再設定のために必要 -->
    <%= form.hidden_field :reset_password_token %>

    <!-- 新しいパスワード入力欄 -->
    <div class="mb-6">
      <%= form.label :password, "新しいパスワード", class: "block text-gray-700" %>
      <%= form.password_field :password, class: "w-full p-3 text-black bg-white border border-gray-300 rounded focus:bg-blue-100 focus:text-black focus:border-gray-500" %>
    </div>

    <!-- 新しいパスワード（確認）入力欄 -->
    <div class="mb-6">
      <%= form.label :password_confirmation, "新しいパスワード（確認）", class: "block text-gray-700" %>
      <%= form.password_field :password_confirmation, class: "w-full p-3 text-black bg-white border border-gray-300 rounded focus:bg-blue-100 focus:text-black focus:border-gray-500" %>
    </div>

    <!-- 保存ボタン -->
    <div class="flex justify-center">
      <%= form.submit "変更", class: "btn bg-[#FFA500] text-black text-lg hover:bg-[#C28742] w-32 rounded shadow" %>
    </div>
    <% end %>
    <!-- フォーム終了 -->

    <!-- リンク: ログイン画面へ戻る -->
    <div class="mt-4 text-center">
      <%= link_to "ログイン画面へ戻る", new_user_session_path, class: "text-sm text-gray-600 hover:text-[#C28742]" %>
    </div>
  </div>
</div>