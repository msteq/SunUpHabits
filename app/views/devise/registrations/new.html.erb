<div class="min-h-screen bg-[#f8f2ec] flex items-center justify-center">
  <div class="w-full max-w-md p-8 bg-white rounded shadow-lg">
    <h2 class="text-2xl font-bold text-black mb-6 text-center">新規登録</h2>

    <!-- エラーメッセージの表示 -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true, data: { turbo: false }) do |form| %>

    <div class="mb-4">
      <%= form.label "ユーザー名", for: "user_name", class: "block text-gray-700" %>
      <%= form.text_field :name, id: "user_name", class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label "メールアドレス", for: "user_email", class: "block text-gray-700" %>
      <%= form.email_field :email, id: "user_email", class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label "パスワード", for: "user_password", class: "block text-gray-700" %>
      <%= form.password_field :password, id: "user_password", class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="mb-6">
      <%= form.label "パスワード（確認）", for: "user_password_confirmation", class: "block text-gray-700" %>
      <%= form.password_field :password_confirmation, id: "user_password_confirmation", class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "登録", class: "btn bg-[#FFA500] text-black text-lg hover:bg-[#C28742] w-full h-10 rounded shadow" %>
    </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>