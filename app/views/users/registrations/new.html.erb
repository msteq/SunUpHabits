<div class="min-h-screen bg-[#f8f2ec] flex items-center justify-center">
  <div class="w-full max-w-md p-8 bg-white rounded shadow">
    <h2 class="text-2xl font-bold text-black mb-6 text-center">新規登録</h2>

    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |form| %>
    <% if resource.errors.any? %>
    <div class="mb-4">
      <h2 class="text-red-500 text-lg">エラーが発生しました：</h2>
      <ul class="list-disc list-inside text-red-500">
        <% [:name, :email, :password, :password_confirmation].each do |field| %>
        <% if resource.errors[field].any? %>
        <% resource.errors.full_messages_for(field).each do |message| %>
        <li><%= message %></li>
        <% end %>
        <% end %>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="mb-4">
      <%= form.label "ユーザー名", class: "block text-gray-700" %>
      <%= form.text_field :name, class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label "メールアドレス", class: "block text-gray-700" %>
      <%= form.email_field :email, class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label "パスワード", class: "block text-gray-700" %>
      <%= form.password_field :password, class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="mb-6">
      <%= form.label "パスワード（確認）", class: "block text-gray-700" %>
      <%= form.password_field :password_confirmation, class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "登録", class: "btn bg-[#FFA500] text-black text-lg hover:bg-[#C28742] w-full h-10 rounded" %>
    </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "ログインはこちら", new_user_session_path, class: "text-sm text-gray-600 hover:text-[#C28742]" %>
    </div>
  </div>
</div>