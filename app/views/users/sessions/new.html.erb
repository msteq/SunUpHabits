<div class="min-h-screen bg-[#f8f2ec] flex items-center justify-center">
  <div class="w-full max-w-md p-8 bg-white rounded shadow">
    <h2 class="text-2xl font-bold text-black mb-6 text-center">ログイン</h2>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |form| %>
    <div class="mb-4">
      <%= form.label "メールアドレス", class: "block text-gray-700" %>
      <%= form.email_field :email, class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="mb-6">
      <%= form.label "パスワード", class: "block text-gray-700" %>
      <%= form.password_field :password, class: "w-full p-3 text-black bg-white border border-gray-300 focus:bg-blue-100 focus:text-black focus:border-gray-500 rounded" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "ログイン", class: "btn bg-[#FFA500] text-black text-lg hover:bg-[#C28742] w-full h-10 rounded" %>
    </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "新規登録はこちら", new_user_registration_path, class: "text-sm text-gray-600 hover:text-[#C28742]" %>
      <br>
      <%= link_to "パスワードを忘れた方はこちら", new_user_password_path, class: "text-sm text-gray-600 hover:text-[#C28742]" %>
    </div>
  </div>
</div>